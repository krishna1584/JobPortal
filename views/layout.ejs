      .navbar-nav .nav-item .nav-link.active {
        background-color: #F2BB05;
        color: white !important;
      }
    </style>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <!-- header section starts -->
    <div class="service_section">
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="/">
                        <span>
                            JobSphere
                        </span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="s-1"> </span>
                        <span class="s-2"> </span>
                        <span class="s-3"> </span>
                    </button>
  
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex mx-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav active">
                                <li class="nav-item">
                                    <a class="nav-link" href="/" id="home-link">Home <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login" id="find-job-link">Find a Job</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login" id="post-job-link">Post a Job</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#contactLink" id="contact-link">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/register" id="signup-link">Sign up</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login" id="login-link">Login</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
    </div>

    <!-- JavaScript for active link highlighting -->
    <script>
        // Get the current URL path
        var currentPath = window.location.pathname;

        // Function to set the active class based on the current URL
        // Function to set the active class based on the current URL
// Function to set the active class based on the current URL
function setActiveLink() {
    // Get all the navbar links
    var navLinks = document.querySelectorAll('.nav-link');

    navLinks.forEach(function(link) {
        // Remove active class from all links
        link.classList.remove('active');
    });

    // Check the current path and add the active class accordingly
    if (currentPath === '/') {
        document.getElementById('home-link').classList.add('active');
    } else if (currentPath === '/login') {
        document.getElementById('login-link').classList.add('active');
    } else if (currentPath === '/register') {
        document.getElementById('signup-link').classList.add('active');
    } else if (currentPath === '#contactLink') {
        document.getElementById('contact-link').classList.add('active');
    } else if (currentPath === '/view-jobs' || currentPath === '/create-job') {
        // Highlight Login when "Find a Job" or "Post a Job" is clicked
        document.getElementById('login-link').classList.add('active');
    }
}



        // Run the function when the page is loaded
        window.onload = setActiveLink;
    </script>
</body>
</html>
