<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="/images/logo.png">
    <title>JobSphere</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />
    <!-- bootstrap core css -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="css/responsive.css" rel="stylesheet" />
    <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.js"></script>
    <script type="text/javascript" src="js/custom.js"></script>
    <style>
      .error {
        text-align: center;
        font-size: 18px;
        color: red;
      }
      .card {
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.26);
        border-radius: 10px;
      }
      .navbar-nav .nav-item .nav-link {
        color: white !important;  /* Ensures text color remains white */
        transition: background-color 0.3s ease; /* Smooth background color transition */
      }
      .navbar-nav .nav-item .nav-link.active {
        color: white !important;  /* Text stays white */
        background-color: #F2BB05;  /* Active background color */
      }
      .navbar-nav .nav-item .nav-link:hover {
        background-color: #F2BB05; /* Button background color on hover */
      }
    </style>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <!-- Just an image -->
    <!-- header section starts -->
    <div class="service_section">
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="/">
                        <span>JobSphere</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="s-1"> </span>
                        <span class="s-2"> </span>
                        <span class="s-3"> </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex mx-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav active">
                                <li class="nav-item">
                                    <a class="nav-link" href="/dashboard" id="home-link">Home</a>
                                </li>
                                <% if (user.userType === "Applicant") { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/view-jobs" id="find-job-link">Find a Job</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/view-applications" id="view-applications-link">View Applications</a>
                                </li>
                                <% } %>
                                <% if (user.userType === "Employer") { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/create-job" id="post-job-link">Post a Job</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/view-my-postings" id="view-postings-link">View Postings</a>
                                </li>
                                <% } %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/profile" id="profile-link">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/logout" id="logout-link">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
    </div>

    <!-- JavaScript for active link highlighting -->
    <script>
        // Get the current URL path
        var currentPath = window.location.pathname;

        // Function to set the active class based on the current URL
        function setActiveLink() {
            // Get all the navbar links
            var navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(function(link) {
                // Remove active class from all links
                link.classList.remove('active');
            });

            // Add the active class to the link that matches the current URL
            if (currentPath.includes('/dashboard')) {
                document.getElementById('home-link').classList.add('active');
            } else if (currentPath.includes('/view-jobs')) {
                document.getElementById('find-job-link').classList.add('active');
            } else if (currentPath.includes('/view-applications')) {
                document.getElementById('view-applications-link').classList.add('active');
            } else if (currentPath.includes('/create-job')) {
                document.getElementById('post-job-link').classList.add('active');
            } else if (currentPath.includes('/view-my-postings')) {
                document.getElementById('view-postings-link').classList.add('active');
            } else if (currentPath.includes('/profile')) {
                document.getElementById('profile-link').classList.add('active');
            } else if (currentPath.includes('/logout')) {
                document.getElementById('logout-link').classList.add('active');
            }
        }

        window.onload = setActiveLink;
    </script>
</body>
</html>
